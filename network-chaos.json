{
   "apiVersion": "chaos-mesh.org/v1alpha1",
   "kind": "NetworkChaos",
   "metadata": {
      "name": "network-chaos1",
      "namespace": "scalablemine-hkr-infra"
   },
   "spec": {
      "action": "delay",
      "delay": {
         "correlation": "100",
         "jitter": "0ms",
         "latency": "500ms"
      },
      "duration": "5m",
      "direction": "both",
      "mode": "all",
      "selector": {
         "namespaces": [
            "scalablemine-hkr-kafka",
            "scalablemine-hkr-sut"
         ],
         "nodeSelectors": {
            "kubernetes.io/hostname": "kube1-3"
         }
      },
      "target": {
         "mode": "all",
         "selector": {
            "namespaces": [
               "scalablemine-hkr-kafka",
               "scalablemine-hkr-sut"
            ],
            "nodeSelectors": {
               "kubernetes.io/hostname": "kube1-5"
            }
         }
      }
   }
}
