{
  "context" : {
    "prefix" : ""
  },
  "infra" : {
    "namespace": "infra",
    "chaosMeshEnabled": false
  },
  "monitor": {
    "namespace": "monitor",
    "prometheusEnabled": true,
    "energyMonitorEnabled": false
  },
  "kafka": {
    "enabled": true,
    "namespace": "kafka",
    "clusterName": "power",
    "brokerReplicas": 1,
    "zookeeperReplicas": 1,
    "uiEnabled": true,
    "strimziEnabled": true,
    "topics": [
      {
        "name": "input"
      },
      {
        "name": "model"
      }
    ]
  },
  "load": {
    "namespace" : "load",
    "inputTopic": "input",
    "intensity": 1
  },
  "sut": {
    "namespace" : "sut",
    "session" : {
      "jobManager" : {
        "memory" : "2048Mi",
        "cpu" : 1
      },
      "taskManager" : {
        "memory" : "2048Mi",
        "cpu" : 1,
        "replicas" : 1
      }
    },
    "jobs" : {
      "heuristicsMinerFlink" : {
        "group" : "flink",
        "variant" : "parallelized",
        "parallelism" : 1,
        "bucketSize" : 50,
        "andThreshold" : 0.5,
        "dependencyThreshold" : 0.5
        }
    },
    "deployments" : {
      "heuristicsMinerFlink" : {
        "group" : "heuristics-miner",
        "parallelism" : 1,
        "sampleSize" : 200,
        "batchSize" : 100,
        "andThreshold" : 0.5,
        "dependencyThreshold" : 0.5
        }
    },
    "topics": {
      "model": "model"
    }
  }
}
